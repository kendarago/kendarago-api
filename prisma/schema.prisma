generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(ulid())

  email String @unique
  name  String
}

model RentalCompany {
  id   String @id @default(cuid())
  slug String @unique

  name           String
  address        String
  operatingHours String

  contact Int

  vehicles Vehicle[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VehicleType {
  id   String @id @default(cuid())
  slug String @unique

  name String

  vehicles Vehicle[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vehicle {
  id String @id @default(cuid())

  name           String
  brand          String
  fuelType       String
  transmission   String
  engineCapacity String
  imageUrl       String?

  year         Int
  pricePerDay  Int
  seatCapacity Int

  rentalCompany     RentalCompany? @relation(fields: [rentalCompanySlug], references: [slug])
  rentalCompanySlug String?

  vehicleType     VehicleType? @relation(fields: [vehicleTypeSlug], references: [slug])
  vehicleTypeSlug String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

