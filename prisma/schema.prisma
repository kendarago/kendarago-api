generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(ulid())

  email    String @unique
  fullName String

  password Password?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
}

model Password {
  id String @id @default(ulid())

  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RentalCompany {
  id   String @id @default(cuid())
  slug String @unique

  name           String
  address        String
  city           String
  operatingHours String
  contact        String

  vehicles Vehicle[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VehicleType {
  id   String @id @default(cuid())
  slug String @unique

  name String

  vehicles Vehicle[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vehicle {
  id   String @id @default(cuid())
  slug String @unique

  name           String
  brand          String
  fuelType       String
  transmission   String
  engineCapacity String
  imageUrl       String?

  year         Int
  pricePerDay  Int
  seatCapacity Int
  stock        Int @default(1)

  rentalCompany     RentalCompany @relation(fields: [rentalCompanySlug], references: [slug])
  rentalCompanySlug String

  vehicleType     VehicleType @relation(fields: [vehicleTypeSlug], references: [slug])
  vehicleTypeSlug String

  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, rentalCompanySlug])
}

model Booking {
  id String @id @default(cuid())

  startDate DateTime
  endDate   DateTime
  status    BookingStatus @default(PENDING)
  quantity  Int           @default(1) // How many units booked

  vehicle   Vehicle @relation(fields: [vehicleId], references: [id])
  vehicleId String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  totalPrice Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([vehicleId])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}
